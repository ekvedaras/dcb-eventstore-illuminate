{
    "name": "ekvedaras/dcb-eventstore-illuminate",
    "description": "Laravel database adapter for the Dynamic Consistency Boundary implementation",
    "type": "package",
    "license": "MIT",
    "authors": [
        {
            "name": "Ernestas Kvedaras",
            "email": "kvedarasernestas@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.3",
        "ramsey/uuid": "^4.7",
        "psr/clock": "^1",
        "webmozart/assert": "^1.11",
        "wwwision/dcb-eventstore": "^4",
        "illuminate/database": "^11|^12",
        "illuminate/support": "^11|^12"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpstan/phpstan": "^2",
        "squizlabs/php_codesniffer": "^4.0.1",
        "phpunit/phpunit": "^12.4.4",
        "brianium/paratest": "^7.14.2",
        "orchestra/testbench": "^v10.8.0",
        "larastan/larastan": "^3"
    },
    "autoload": {
        "psr-4": {
            "EKvedaras\\DCBEventStoreIlluminate\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EKvedaras\\DCBEventStoreIlluminate\\Tests\\": "tests/",
            "Wwwision\\DCBEventStore\\Tests\\": "vendor/wwwision/dcb-eventstore/tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "scripts": {
        "test:phpstan": "phpstan",
        "test:cs": "phpcs --colors src",
        "test:cs:fix": "phpcbf --colors src",
        "test:integration": [
            "echo $DCB_TEST_DSN",
            "phpunit tests/Integration/IlluminateEventStoreTest.php --exclude-group=parallel --exclude-group=feature_liveStream --exclude-group=feature_appendConditionWithoutMatchingEvent"
        ],
        "test:consistency": [
            "EKvedaras\\DCBEventStoreIlluminate\\Tests\\Integration\\ConcurrencyTest::prepare",
            "paratest tests/Integration --group=parallel --functional --processes=10",
            "phpunit tests/Integration/ConcurrencyTest.php --group=validate",
            "EKvedaras\\DCBEventStoreIlluminate\\Tests\\Integration\\ConcurrencyTest::cleanup"
        ],
        "phpunit" : [
          "@test:integration",
          "@test:consistency"
        ],
        "test": [
            "@test:phpstan",
            "@test:cs",
            "@test:integration",
            "@test:consistency"
        ],
        "post-autoload-dump": [
            "touch test.sqlite",
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "lint": [
            "@php vendor/bin/phpstan analyse --verbose --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "EKvedaras\\DCBEventStoreIlluminate\\DcbEventStoreServiceProvider"
            ]
        }
    }
}
